          var title = post.getAttribute('data-title') || '';
          var excerpt = post.getAttribute('data-excerpt') || '';
          var tags = post.getAttribute('data-tags') || '';
          
          var matches = title.indexOf(searchTerm) !== -1 || 
                       excerpt.indexOf(searchTerm) !== -1 || 
                       tags.indexOf(searchTerm) !== -1;
          
          if (matches || searchTerm === '') {
            post.style.display = '';
            visibleCount++;
          } else {
            post.style.display = 'none';
          }
        });
        
        // Hide featured section header when searching
        if (featuredSection) {
          var featuredHeader = featuredSection.querySelector('h2');
          if (featuredHeader) {
            featuredHeader.style.display = searchTerm === '' ? '' : 'none';
          }
        }
        
        if (noResults) {
          if (visibleCount === 0 && searchTerm !== '') {
            noResults.classList.remove('hidden');
          } else {
            noResults.classList.add('hidden');
          }
        }
      });
    }
  });
</script>

