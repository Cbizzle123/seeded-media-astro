---
import Layout from '../layouts/Layout.astro';

const stats = [
  { label: 'Average Time Saved Per Workflow', value: '70-99%', icon: 'clock' },
  { label: 'Average Cost Per Lead Reduction', value: '30%', icon: 'trending' },
  { label: 'Average ROI per annum', value: '3-5x', icon: 'chart' },
  { label: 'Client Satisfaction', value: '100%', icon: 'star' }
];

const services = [
  {
    title: 'Workflow Automation & Outreach',
    description: 'Streamline repetitive tasks, optimize business processes, and automate outreach campaigns to save time and scale efficiently.',
    icon: 'workflow',
    features: ['Process Automation', 'Email Outreach', 'Lead Nurturing', 'Integration Setup']
  },
  {
    title: 'Website Development & Maintenance',
    description: 'Modern, responsive websites built for performance with ongoing support, optimization, and search visibility strategies.',
    icon: 'globe',
    features: ['Custom Website Design', 'SEO Optimization', 'GEO Optimization', 'Ongoing Maintenance']
  },
  {
    title: 'AI Customer Service',
    description: 'Intelligent AI-powered customer service solutions that handle inquiries 24/7 across chat and phone, improving response times and customer satisfaction.',
    icon: 'bot',
    features: ['AI Chatbots', 'AI Phone Agents', 'Multi-platform Integration', 'Natural Language Processing']
  }
];

const trustedBy = [
  { name: 'National Fish & Chip Awards', abbrev: 'NFCA' },
  { name: 'NFFF', abbrev: 'NFFF' },
];
---

<Layout>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Animated background gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-white via-green-50/30 to-emerald-50/50"></div>

    <!-- Animated blob shapes -->
    <div class="blob-shape absolute top-20 -left-20 w-72 h-72 bg-gradient-to-br from-green-200/40 to-emerald-300/30 blur-3xl"></div>
    <div class="blob-shape absolute bottom-20 -right-20 w-96 h-96 bg-gradient-to-br from-emerald-200/30 to-green-300/20 blur-3xl" style="animation-delay: -4s;"></div>
    <div class="blob-shape absolute top-1/2 left-1/3 w-64 h-64 bg-gradient-to-br from-green-100/40 to-teal-200/30 blur-3xl" style="animation-delay: -2s;"></div>

    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 grid-pattern opacity-50"></div>

    <!-- Spline 3D Animation -->
    <spline-viewer
      url="https://prod.spline.design/PBx-mrQP6suIxaZD/scene.splinecode"
      class="absolute inset-0 w-full h-full opacity-50"
    ></spline-viewer>

    <!-- Gradient overlay for text readability -->
    <div class="absolute inset-0 bg-gradient-to-b from-white/60 via-white/40 to-white/70"></div>

    <!-- Cover Spline watermark -->
    <div class="absolute bottom-0 right-0 w-64 h-24 bg-white z-20"></div>

    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center pt-20 md:pt-0">
      <!-- Main Headline -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 mb-8 leading-[1.1] tracking-tight animate-fade-in-up">
        <span class="block">Stay Competitive</span>
        <span class="block mt-2">
          <span class="text-gray-900">with </span>
          <span class="gradient-text-animated relative inline-block">
            Smart Automation
            <svg class="absolute -bottom-2 left-0 w-full" height="8" viewBox="0 0 200 8" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 5.5C47.6667 2.16667 141.4 -2.1 199 5.5" stroke="url(#underline-gradient)" stroke-width="3" stroke-linecap="round"/>
              <defs>
                <linearGradient id="underline-gradient" x1="0" y1="0" x2="200" y2="0">
                  <stop stop-color="#059669"/>
                  <stop offset="0.5" stop-color="#10b981"/>
                  <stop offset="1" stop-color="#34d399"/>
                </linearGradient>
              </defs>
            </svg>
          </span>
        </span>
      </h1>

      <!-- Subtitle -->
      <p class="text-lg sm:text-xl md:text-2xl text-gray-600 mb-12 max-w-2xl mx-auto leading-relaxed font-medium animate-fade-in-up delay-200 opacity-0" style="animation-fill-mode: forwards;">
        Less manual work. Faster responses. Fewer mistakes.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center mb-16 animate-fade-in-up delay-300 opacity-0" style="animation-fill-mode: forwards;">
        <a href="#contact" class="group btn-primary flex items-center text-lg px-8 py-4">
          <span>Get Started Today</span>
          <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
            <path d="m13 5 7 7-7 7"></path>
          </svg>
        </a>

        <a href="/portfolio" class="group flex items-center text-gray-700 hover:text-green-600 font-semibold text-lg transition-all duration-300">
          <div class="w-12 h-12 glass-card rounded-full flex items-center justify-center mr-4 group-hover:shadow-glow-green transition-all duration-300 group-hover:scale-110">
            <svg class="w-5 h-5 text-green-600 ml-0.5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"></path>
            </svg>
          </div>
          <span class="link-underline">View My Work</span>
        </a>
      </div>

      <!-- Stats Row -->
      <div class="flex flex-wrap justify-center gap-8 md:gap-16 animate-fade-in-up delay-400 opacity-0" style="animation-fill-mode: forwards;">
        <div class="text-center group">
          <div class="text-3xl sm:text-4xl md:text-5xl font-bold gradient-text mb-2 group-hover:scale-110 transition-transform duration-300">150+</div>
          <div class="text-sm sm:text-base text-gray-500 font-medium uppercase tracking-wider">Projects</div>
        </div>
        <div class="hidden sm:block w-px h-16 bg-gradient-to-b from-transparent via-gray-300 to-transparent"></div>
        <div class="text-center group">
          <div class="text-3xl sm:text-4xl md:text-5xl font-bold gradient-text mb-2 group-hover:scale-110 transition-transform duration-300">80+</div>
          <div class="text-sm sm:text-base text-gray-500 font-medium uppercase tracking-wider">Clients</div>
        </div>
        <div class="hidden sm:block w-px h-16 bg-gradient-to-b from-transparent via-gray-300 to-transparent"></div>
        <div class="text-center group">
          <div class="text-3xl sm:text-4xl md:text-5xl font-bold gradient-text mb-2 group-hover:scale-110 transition-transform duration-300">5+</div>
          <div class="text-sm sm:text-base text-gray-500 font-medium uppercase tracking-wider">Years</div>
        </div>
      </div>
    </div>

  </section>

  <!-- Services Section -->
  <section id="services" class="py-24 md:py-32 bg-white relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute top-0 right-0 w-1/3 h-full bg-gradient-to-l from-green-50/50 to-transparent"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-green-100/30 rounded-full blur-3xl"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <!-- Section Header -->
      <div class="text-center mb-20">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-100 mb-6">
          <span class="text-sm font-semibold text-green-700 uppercase tracking-wider">What We Do</span>
        </div>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
          My <span class="gradient-text">Services</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Intelligent automation solutions designed to save you time and money
          while scaling your business efficiently.
        </p>
      </div>

      <!-- Services Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <div
            class="group relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-3 border border-gray-100 overflow-hidden"
            style={`animation-delay: ${index * 150}ms`}
          >
            <!-- Hover gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-br from-green-50 to-emerald-50 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

            <!-- Top accent line -->
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-green-500 via-emerald-500 to-teal-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>

            <div class="relative">
              <!-- Icon -->
              <div class="w-16 h-16 bg-gradient-to-br from-green-100 to-emerald-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-gradient-to-br group-hover:from-green-500 group-hover:to-emerald-500 transition-all duration-500 group-hover:scale-110 group-hover:rotate-3">
                {service.icon === 'workflow' && (
                  <svg class="w-8 h-8 text-green-600 group-hover:text-white transition-colors duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                  </svg>
                )}
                {service.icon === 'globe' && (
                  <svg class="w-8 h-8 text-green-600 group-hover:text-white transition-colors duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                  </svg>
                )}
                {service.icon === 'bot' && (
                  <svg class="w-8 h-8 text-green-600 group-hover:text-white transition-colors duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                  </svg>
                )}
              </div>

              <!-- Content -->
              <h3 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-green-700 transition-colors duration-300">
                {service.title}
              </h3>

              <p class="text-gray-600 mb-6 leading-relaxed">
                {service.description}
              </p>

              <!-- Features -->
              <ul class="space-y-3">
                {service.features.map((feature, featureIndex) => (
                  <li class="flex items-center text-gray-600 group-hover:text-gray-700 transition-colors duration-300" style={`transition-delay: ${featureIndex * 50}ms`}>
                    <div class="w-5 h-5 rounded-full bg-green-100 group-hover:bg-green-500 flex items-center justify-center mr-3 transition-all duration-300">
                      <svg class="w-3 h-3 text-green-600 group-hover:text-white transition-colors duration-300" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <span class="text-sm font-medium">{feature}</span>
                  </li>
                ))}
              </ul>

              <!-- Arrow indicator -->
              <div class="mt-8 flex items-center text-green-600 font-semibold opacity-0 group-hover:opacity-100 transform translate-y-2 group-hover:translate-y-0 transition-all duration-300">
                <span>Learn more</span>
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-24 md:py-32 relative overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-green-50/30 to-white"></div>
    <div class="absolute top-1/4 right-0 w-96 h-96 bg-green-100/40 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 left-0 w-64 h-64 bg-emerald-100/30 rounded-full blur-3xl"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-center">
        <!-- Left Column -->
        <div>
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-100 mb-6">
            <span class="text-sm font-semibold text-green-700 uppercase tracking-wider">About Us</span>
          </div>

          <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-8 leading-tight">
            Growing Businesses Through
            <span class="gradient-text block mt-2">Smart Technology</span>
          </h2>

          <p class="text-lg text-gray-600 mb-6 leading-relaxed">
            I stay at the cutting edge of technology so my clients and partners don't get left out of the race.
          </p>

          <p class="text-lg text-gray-600 mb-10 leading-relaxed">
            If you are willing to let go of your tedious 'but someone's got to do it' tasks, I can help.
          </p>

          <!-- Stats Grid -->
          <div class="grid grid-cols-2 gap-4">
            {stats.map((stat, index) => (
              <div class="group glass-card rounded-2xl p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1" style={`animation-delay: ${index * 100}ms`}>
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-green-100 to-emerald-100 flex items-center justify-center mb-3 group-hover:scale-110 group-hover:from-green-500 group-hover:to-emerald-500 transition-all duration-300">
                  {stat.icon === 'clock' && (
                    <svg class="w-6 h-6 text-green-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  )}
                  {stat.icon === 'trending' && (
                    <svg class="w-6 h-6 text-green-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                    </svg>
                  )}
                  {stat.icon === 'chart' && (
                    <svg class="w-6 h-6 text-green-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                  )}
                  {stat.icon === 'star' && (
                    <svg class="w-6 h-6 text-green-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                    </svg>
                  )}
                </div>
                <div class="text-2xl md:text-3xl font-bold gradient-text mb-1">{stat.value}</div>
                <div class="text-sm text-gray-600 leading-snug">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>

        <!-- Right Column - Mission Card -->
        <div class="relative">
          <!-- Floating decoration -->
          <div class="absolute -top-8 -right-8 w-24 h-24 bg-gradient-to-br from-green-400 to-emerald-500 rounded-2xl opacity-20 animate-float"></div>
          <div class="absolute -bottom-8 -left-8 w-32 h-32 bg-gradient-to-br from-emerald-400 to-teal-500 rounded-full opacity-20 animate-float-reverse"></div>

          <div class="relative bg-white rounded-3xl shadow-2xl p-8 md:p-10 transform hover:scale-[1.02] transition-transform duration-500">
            <!-- Gradient border effect -->
            <div class="absolute inset-0 bg-gradient-to-br from-green-500 via-emerald-500 to-teal-500 rounded-3xl opacity-10"></div>

            <div class="relative">
              <!-- Mission header -->
              <div class="bg-gradient-to-br from-green-100 to-emerald-100 rounded-2xl p-6 mb-8">
                <div class="flex items-center gap-3 mb-4">
                  <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                  </div>
                  <h3 class="text-2xl font-bold text-gray-900">My Mission</h3>
                </div>
                <p class="text-gray-700 leading-relaxed">
                  To remove the mind-numbing tasks from businesses so they can focus on the work only humans can do.
                </p>
              </div>

              <!-- Values list -->
              <div class="space-y-3">
                <div class="group flex items-center gap-4 p-4 rounded-xl hover:bg-green-50 transition-all duration-300">
                  <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-green-100 to-emerald-100 flex items-center justify-center group-hover:from-green-500 group-hover:to-emerald-500 transition-all duration-300">
                    <svg class="w-5 h-5 text-green-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                  </div>
                  <span class="text-gray-700 font-medium group-hover:text-green-700 transition-colors duration-300">Technology First Approach</span>
                  <svg class="w-5 h-5 text-green-500 ml-auto opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
                <div class="group flex items-center gap-4 p-4 rounded-xl hover:bg-green-50 transition-all duration-300">
                  <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-green-100 to-emerald-100 flex items-center justify-center group-hover:from-green-500 group-hover:to-emerald-500 transition-all duration-300">
                    <svg class="w-5 h-5 text-green-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                  </div>
                  <span class="text-gray-700 font-medium group-hover:text-green-700 transition-colors duration-300">Data-Driven Results</span>
                  <svg class="w-5 h-5 text-green-500 ml-auto opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
                <div class="group flex items-center gap-4 p-4 rounded-xl hover:bg-green-50 transition-all duration-300">
                  <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-green-100 to-emerald-100 flex items-center justify-center group-hover:from-green-500 group-hover:to-emerald-500 transition-all duration-300">
                    <svg class="w-5 h-5 text-green-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                    </svg>
                  </div>
                  <span class="text-gray-700 font-medium group-hover:text-green-700 transition-colors duration-300">Scalable Solutions</span>
                  <svg class="w-5 h-5 text-green-500 ml-auto opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
                <div class="group flex items-center gap-4 p-4 rounded-xl hover:bg-green-50 transition-all duration-300">
                  <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-green-100 to-emerald-100 flex items-center justify-center group-hover:from-green-500 group-hover:to-emerald-500 transition-all duration-300">
                    <svg class="w-5 h-5 text-green-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                  </div>
                  <span class="text-gray-700 font-medium group-hover:text-green-700 transition-colors duration-300">24/7 Support</span>
                  <svg class="w-5 h-5 text-green-500 ml-auto opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
