---
import Layout from '../layouts/Layout.astro';

const skills = [
  { name: 'Event Production', level: 95 },
  { name: 'Digital Marketing', level: 90 },
  { name: 'Graphic Design', level: 88 },
  { name: 'AI Automation', level: 92 },
];
---

<Layout
  title="Portfolio - Charlie Bennett | Seeded Media"
  description="View my work in event production, digital marketing, and design for clients like the National Fish & Chip Awards and NFFF. Based in Leeds, UK."
>
  <main class="pt-20 min-h-screen relative overflow-hidden">
    <!-- Background elements -->
    <div class="fixed inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-green-50/30"></div>
      <div class="absolute top-1/4 -right-32 w-96 h-96 bg-green-100/40 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 -left-32 w-80 h-80 bg-emerald-100/30 rounded-full blur-3xl"></div>
    </div>

    <!-- Hero Section -->
    <section class="py-16 md:py-24 relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Back link -->
        <a
          href="/"
          class="group inline-flex items-center text-gray-600 hover:text-green-600 font-medium mb-12 transition-all duration-300"
        >
          <div class="w-10 h-10 rounded-full bg-white shadow-md flex items-center justify-center mr-3 group-hover:shadow-lg group-hover:-translate-x-1 transition-all duration-300">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
          </div>
          <span class="link-underline">Back to Home</span>
        </a>

        <!-- Profile Card -->
        <div class="relative max-w-5xl mx-auto">
          <!-- Decorative elements -->
          <div class="absolute -top-6 -left-6 w-24 h-24 bg-gradient-to-br from-green-400/20 to-emerald-500/20 rounded-2xl blur-xl"></div>
          <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-gradient-to-br from-emerald-400/20 to-teal-500/20 rounded-full blur-xl"></div>

          <div class="relative bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl p-8 md:p-12 border border-white/50">
            <div class="flex flex-col lg:flex-row items-center lg:items-start gap-8 lg:gap-12">
              <!-- Profile Image -->
              <div class="relative flex-shrink-0 group">
                <div class="absolute inset-0 bg-gradient-to-br from-green-500 to-emerald-500 rounded-full blur-lg opacity-30 group-hover:opacity-50 transition-opacity duration-500"></div>
                <div class="relative w-44 h-44 md:w-52 md:h-52 rounded-full overflow-hidden ring-4 ring-white shadow-2xl">
                  <img
                    src="/images/profile-pic.jpg"
                    alt="Charlie Bennett"
                    width="208"
                    height="208"
                    loading="eager"
                    decoding="async"
                    class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                  />
                </div>
                <!-- Status indicator -->
                <div class="absolute bottom-4 right-4 w-6 h-6 bg-green-500 rounded-full border-4 border-white shadow-lg">
                  <span class="absolute inset-0 rounded-full bg-green-400 animate-ping opacity-75"></span>
                </div>
              </div>

              <!-- Content -->
              <div class="flex-1 text-center lg:text-left">
                <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-green-100 mb-4">
                  <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                  <span class="text-sm font-semibold text-green-700">Available for Projects</span>
                </div>

                <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-3">Charlie Bennett</h1>
                <p class="text-xl md:text-2xl gradient-text font-semibold mb-6">Digital Engineer</p>

                <p class="text-gray-600 leading-relaxed mb-8 max-w-2xl">
                  Based in Leeds, United Kingdom, I design and build software and digital tools 
                  tailored to real business needs. I have a strong analytical, problem-solving background 
                  and over 12 years working with computers, programming, and development.
                </p>

                <!-- Stats -->
                <div class="grid grid-cols-3 gap-4 mb-8">
                  <div class="text-center lg:text-left">
                    <div class="text-3xl md:text-4xl font-bold gradient-text">5 Years</div>
                    <div class="text-sm text-gray-500 font-medium">Professional Exp.</div>
                  </div>
                  <div class="text-center lg:text-left">
                    <div class="text-3xl md:text-4xl font-bold gradient-text">80+</div>
                    <div class="text-sm text-gray-500 font-medium">Completed Projects</div>
                  </div>
                  <div class="text-center lg:text-left">
                    <div class="text-3xl md:text-4xl font-bold gradient-text">100%</div>
                    <div class="text-sm text-gray-500 font-medium">Satisfaction Guarantee</div>
                  </div>
                </div>

                <!-- Tags -->
                <div class="flex flex-wrap gap-3 justify-center lg:justify-start">
                  {['Website Development', 'Automations', 'Digital Marketing', 'Graphic Design'].map((tag, index) => (
                    <span
                      class="group px-4 py-2 bg-gradient-to-r from-gray-50 to-gray-100 hover:from-green-50 hover:to-emerald-50 rounded-xl text-sm font-medium text-gray-700 hover:text-green-700 transition-all duration-300 cursor-default border border-gray-200 hover:border-green-200"
                      style={`animation-delay: ${index * 100}ms`}
                    >
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section class="py-16 md:py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-100 mb-6">
            <span class="text-sm font-semibold text-green-700 uppercase tracking-wider">Featured Work</span>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Selected <span class="gradient-text">Projects</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            A showcase of my best work in event production, digital marketing, and brand design.
          </p>
        </div>

        <!-- Project 1: Beaver Joinery -->
        <div class="mb-32">
          <!-- Project Header Card -->
          <div class="relative bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 rounded-3xl p-8 md:p-12 mb-8 overflow-hidden">
            <!-- Decorative shapes -->
            <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-yellow-500/20 to-amber-500/20 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
            <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-br from-amber-500/15 to-yellow-500/15 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

            <div class="relative">
              <div class="flex flex-wrap items-center gap-4 mb-6">
                <span class="px-4 py-2 bg-yellow-500/20 backdrop-blur-sm rounded-full text-sm font-semibold text-yellow-400 shadow-sm border border-yellow-500/30">
                  Website Development
                </span>
                <span class="flex items-center text-gray-400 text-sm font-medium">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  2025
                </span>
              </div>

              <!-- Logo -->
              <div class="mb-6">
                <img
                  src="/images/Beaverlogo.png"
                  alt="Beaver Joinery Logo"
                  width="200"
                  height="60"
                  loading="lazy"
                  decoding="async"
                  class="h-12 md:h-14 w-auto"
                />
              </div>

              <h3 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
                Beaver Bespoke Joinery
              </h3>

              <p class="text-lg text-gray-300 max-w-3xl leading-relaxed mb-8">
                A sleek, professional website for a Leeds-based bespoke joinery and interior fit-out specialist with over 30 years of industry excellence. The site showcases their precision-built interiors and manufacturing capabilities with a modern, dark-themed design featuring custom animations and an integrated AI assistant.
              </p>

              <!-- Live Link -->
              <div class="mb-8">
                <a
                  href="https://beaverleeds-demo.netlify.app/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-5 py-3 bg-yellow-500 hover:bg-yellow-400 text-gray-900 font-semibold rounded-xl transition-all duration-300 hover:shadow-lg hover:shadow-yellow-500/25 hover:-translate-y-0.5"
                >
                  <span>View Demo Site</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
              </div>

              <!-- Tags -->
              <div class="flex flex-wrap gap-3">
                {['Web Design', 'Responsive Development', 'AI Chatbot', 'Modern UI/UX', 'SEO Optimised'].map((tag) => (
                  <span class="px-4 py-2 bg-white/10 backdrop-blur-sm rounded-xl text-sm font-medium text-gray-300 shadow-sm border border-white/10">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>

          <!-- Website Preview -->
          <div class="grid grid-cols-1 gap-6">
            <!-- Full width screenshot -->
            <div class="relative group overflow-hidden rounded-3xl shadow-2xl bg-gradient-to-br from-gray-900 to-gray-800">
              <div class="p-4 md:p-6">
                <!-- Browser mockup header -->
                <div class="flex items-center gap-2 mb-4 pb-4 border-b border-gray-700">
                  <div class="flex gap-2">
                    <div class="w-3 h-3 rounded-full bg-red-500"></div>
                    <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                    <div class="w-3 h-3 rounded-full bg-green-500"></div>
                  </div>
                  <div class="flex-1 mx-4">
                    <div class="bg-gray-700 rounded-lg px-4 py-2 text-sm text-gray-400 font-mono">
                      beaverleeds-demo.netlify.app
                    </div>
                  </div>
                </div>
                <!-- Website Screenshot Embed -->
                <div class="aspect-[16/9] rounded-xl overflow-hidden bg-gray-800">
                  <iframe
                    src="https://beaverleeds-demo.netlify.app/"
                    title="Beaver Joinery Website Preview"
                    class="w-full h-full border-0 pointer-events-none"
                    loading="lazy"
                  ></iframe>
                </div>
              </div>
              <div class="absolute top-10 right-10 bg-gradient-to-r from-yellow-500 to-amber-500 text-gray-900 px-5 py-2.5 rounded-full text-sm font-bold shadow-xl">
                Website Development
              </div>
            </div>

            <!-- Features highlights -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-6 border border-gray-700/50">
                <div class="w-12 h-12 rounded-xl bg-yellow-500/20 flex items-center justify-center mb-4">
                  <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <h4 class="text-white font-semibold mb-2">Responsive Design</h4>
                <p class="text-gray-400 text-sm">Fully optimised for all devices with seamless mobile experience</p>
              </div>

              <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-6 border border-gray-700/50">
                <div class="w-12 h-12 rounded-xl bg-yellow-500/20 flex items-center justify-center mb-4">
                  <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                </div>
                <h4 class="text-white font-semibold mb-2">AI Assistant</h4>
                <p class="text-gray-400 text-sm">Integrated chatbot for instant customer enquiries and support</p>
              </div>

              <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-6 border border-gray-700/50">
                <div class="w-12 h-12 rounded-xl bg-yellow-500/20 flex items-center justify-center mb-4">
                  <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <h4 class="text-white font-semibold mb-2">Fast Performance</h4>
                <p class="text-gray-400 text-sm">Optimised loading speeds with modern web technologies</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Project 2: Fish & Chip Awards -->
        <div class="mb-32">
          <!-- Project Header Card -->
          <div class="relative bg-gradient-to-br from-amber-50 via-orange-50 to-yellow-50 rounded-3xl p-8 md:p-12 mb-8 overflow-hidden">
            <!-- Decorative shapes -->
            <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-amber-200/30 to-orange-200/30 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
            <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-br from-yellow-200/30 to-amber-200/30 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

            <div class="relative">
              <div class="flex flex-wrap items-center gap-4 mb-6">
                <span class="px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full text-sm font-semibold text-amber-700 shadow-sm">
                  Event Production & Marketing
                </span>
                <span class="flex items-center text-gray-600 text-sm font-medium">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  2023-2026
                </span>
              </div>

              <!-- Logo -->
              <div class="mb-6">
                <img
                  src="/images/NFCA-Logo-Vector-High-res.pdf copy.png"
                  alt="National Fish & Chip Awards Logo"
                  width="280"
                  height="70"
                  loading="lazy"
                  decoding="async"
                  class="h-16 md:h-20 w-auto"
                />
              </div>

              <h3 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
                The National Fish & Chip Awards
              </h3>

              <p class="text-lg text-gray-700 max-w-3xl leading-relaxed mb-8">
                Prestigious awards ceremony celebrating excellence in the fish and chip industry. Delivered comprehensive event production including staging, lighting, AV systems, and live presentation hosting. Created engaging social media campaigns and magazine features to promote the event and drive ticket sales.
              </p>

              <!-- Featured In -->
              <div class="mb-8">
                <p class="text-sm text-gray-500 mb-4 font-semibold uppercase tracking-wider">Featured In</p>
                <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-4 inline-block">
                  <img
                    src="/images/news-outlets.png"
                    alt="As featured in major news outlets"
                    width="600"
                    height="60"
                    loading="lazy"
                    decoding="async"
                    class="h-10 md:h-12 w-auto object-contain"
                  />
                </div>
              </div>

              <!-- Tags -->
              <div class="flex flex-wrap gap-3">
                {['Event Production', 'Live Hosting', 'Social Media', 'Magazine Design', 'Stage Design'].map((tag) => (
                  <span class="px-4 py-2 bg-white/70 backdrop-blur-sm rounded-xl text-sm font-medium text-gray-700 shadow-sm border border-white/50">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>

          <!-- Image Gallery - Bento Grid -->
          <div class="grid grid-cols-1 md:grid-cols-12 gap-4 md:gap-6">
            <!-- Large featured image -->
            <div class="md:col-span-12 relative group overflow-hidden rounded-3xl shadow-2xl">
              <div class="aspect-[21/9] overflow-hidden">
                <img
                  src="/images/526_PLL_FISH_N_CHIPS_AWARDS_CEREMONY_WINNERS_1258-min.jpg"
                  alt="Fish & Chip Awards Ceremony"
                  width="1400"
                  height="600"
                  loading="lazy"
                  decoding="async"
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-1000"
                />
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
              <div class="absolute bottom-6 left-6 right-6 translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
                <p class="text-white text-xl font-semibold">Awards Ceremony 2024</p>
                <p class="text-white/70 text-sm">Full event production and live hosting</p>
              </div>
            </div>

            <!-- Host and Stage -->
            <div class="md:col-span-6 relative group overflow-hidden rounded-2xl shadow-xl">
              <div class="aspect-[4/3] overflow-hidden">
                <img
                  src="/images/_DSF5304-min.jpg"
                  alt="Event Host Presentation"
                  width="600"
                  height="450"
                  loading="lazy"
                  decoding="async"
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <div class="absolute bottom-4 left-4 bg-white/90 backdrop-blur-md px-4 py-2 rounded-xl shadow-lg transform translate-y-2 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
                <p class="text-gray-900 font-semibold text-sm">Live Presentation</p>
              </div>
            </div>

            <div class="md:col-span-6 relative group overflow-hidden rounded-2xl shadow-xl">
              <div class="aspect-[4/3] overflow-hidden">
                <img
                  src="/images/_DSF6758-min.jpg"
                  alt="Stage Production Setup"
                  width="600"
                  height="450"
                  loading="lazy"
                  decoding="async"
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <div class="absolute bottom-4 left-4 bg-white/90 backdrop-blur-md px-4 py-2 rounded-xl shadow-lg transform translate-y-2 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
                <p class="text-gray-900 font-semibold text-sm">Stage Production</p>
              </div>
            </div>

            <!-- Social Media & Magazine -->
            <div class="md:col-span-4 relative group overflow-hidden rounded-2xl shadow-xl bg-gradient-to-br from-gray-100 to-gray-50">
              <div class="p-4">
                <img
                  src="/images/2.jpg"
                  alt="Social Media - Tickets on Sale"
                  width="400"
                  height="500"
                  loading="lazy"
                  decoding="async"
                  class="w-full h-auto rounded-xl shadow-md transform group-hover:scale-[1.02] transition-transform duration-500"
                />
              </div>
              <div class="absolute top-6 right-6 bg-gradient-to-r from-pink-500 to-rose-500 text-white px-3 py-1.5 rounded-full text-xs font-bold shadow-lg">
                Social Media
              </div>
            </div>

            <div class="md:col-span-4 relative group overflow-hidden rounded-2xl shadow-xl bg-gradient-to-br from-gray-100 to-gray-50">
              <div class="p-4">
                <img
                  src="/images/3.jpg"
                  alt="Magazine Feature"
                  width="400"
                  height="500"
                  loading="lazy"
                  decoding="async"
                  class="w-full h-auto rounded-xl shadow-md transform group-hover:scale-[1.02] transition-transform duration-500"
                />
              </div>
              <div class="absolute top-6 right-6 bg-gradient-to-r from-blue-500 to-indigo-500 text-white px-3 py-1.5 rounded-full text-xs font-bold shadow-lg">
                Magazine
              </div>
            </div>

            <div class="md:col-span-4 relative group overflow-hidden rounded-2xl shadow-xl bg-gradient-to-br from-gray-100 to-gray-50">
              <div class="p-4">
                <img
                  src="/images/Certificate.jpg"
                  alt="Employee of the Year Certificate"
                  width="400"
                  height="500"
                  loading="lazy"
                  decoding="async"
                  class="w-full h-auto rounded-xl shadow-md transform group-hover:scale-[1.02] transition-transform duration-500"
                />
              </div>
              <div class="absolute top-6 right-6 bg-gradient-to-r from-amber-500 to-orange-500 text-white px-3 py-1.5 rounded-full text-xs font-bold shadow-lg">
                Certificate
              </div>
            </div>
          </div>
        </div>

        <!-- Project 3: NFFF -->
        <div class="mb-20">
          <!-- Project Header Card -->
          <div class="relative bg-gradient-to-br from-blue-50 via-indigo-50 to-violet-50 rounded-3xl p-8 md:p-12 mb-8 overflow-hidden">
            <!-- Decorative shapes -->
            <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-blue-200/30 to-indigo-200/30 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
            <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-br from-violet-200/30 to-blue-200/30 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

            <div class="relative">
              <div class="flex flex-wrap items-center gap-4 mb-6">
                <span class="px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full text-sm font-semibold text-blue-700 shadow-sm">
                  Digital Marketing & Design
                </span>
                <span class="flex items-center text-gray-600 text-sm font-medium">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  2023-Present
                </span>
              </div>

              <!-- Logo -->
              <div class="mb-6">
                <img
                  src="/images/nffflogo (1).svg"
                  alt="National Federation of Fish Friers Logo"
                  width="180"
                  height="50"
                  loading="lazy"
                  decoding="async"
                  class="h-12 md:h-14 w-auto"
                />
              </div>

              <h3 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
                National Federation of Fish Friers
              </h3>

              <p class="text-lg text-gray-700 max-w-3xl leading-relaxed mb-8">
